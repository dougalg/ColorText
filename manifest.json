{
  "manifest_version": 2,
  "author": "Dougal Graham - dougalg@gmail.com",
  "name": "Color Text",
  "description": "I don't know why anyone would want to but, this extension replaces ASCII text with colors.",
  "version": "1.0",
  "icons": { "16": "icon16.png",
             "48": "icon48.png",
             "128": "icon128.png" },

  "permissions": [
   "activeTab"
  ],

  "browser_action": {
    "default_icon": "icon128.png",
    "default_title": "Change ASCII to colors (Why?)"
  },
  "background": {
      "scripts": ["color_script.js"],
      "persistent": false
  }
}